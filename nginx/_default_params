	charset UTF-8;

	location = /favicon.ico {
        log_not_found off;
        access_log off;
	}

    location ~* \.(css|js|png|gif|jpg)$ {
        expires max;
    }

	location ~ /\.aws/* {
        deny all;
    }

    location ~ .bash_history {
        deny all;
    }

    location ~ /\.mc/* {
        deny all;
    }

    location ~ /\.pki/* {
        deny all;
    }

    location ~ /\.wp-cli/* {
        deny all;
    }

	location ~ /\.git/* {
		deny all;
	}

	location ~ /\.composer {
		deny all;
	}

    location ~ .htaccess {
        deny all;
    }

	location ~ ^/(status|ping)$ {
	    include fastcgi_params;
		fastcgi_pass php-fpm;
		fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
		deny all;
	}
