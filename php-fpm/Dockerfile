FROM phpdockerio/php:8.1-fpm
WORKDIR "/application"

RUN apt-get update; \
    apt-get -y --no-install-recommends install \
        git \ 
        php8.1-bcmath \ 
        php8.1-bz2 \ 
        php8.1-decimal \ 
        php8.1-ds \ 
        php8.1-gd \ 
        php8.1-grpc \ 
        php8.1-http \ 
        php8.1-imagick \ 
        php8.1-intl \ 
        php8.1-mcrypt \ 
        php8.1-memcache \ 
        php8.1-memcached \ 
        php8.1-mysql \ 
        php8.1-pspell \ 
        php8.1-psr \ 
        php8.1-soap \ 
        php8.1-ssh2 \ 
        php8.1-tidy \ 
        php8.1-xmlrpc \ 
        php8.1-xsl \
        php8.1-raphf; \
    apt-get clean; \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*
